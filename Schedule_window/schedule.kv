<Category>:
    size_hint: .5,None
    height: 126
    canvas:
        Rectangle:
            size:self.size
            pos: 0,0
            source: 'Settings/images/gray_square.png'
    RelativeLayout: #IMAGE IMAGE IMAGE IMAGE IMAGE IMAGE
        id: _icon
        size_hint: None, None
        size: 60, 70
        pos: (self.parent.width-self.width)/2, self.parent.height-self.height
        #canvas:
        #    Rectangle:
        #        pos: 0,0
        #        size: 80,80
        #        source: 'Settings/images/users/user.png'
    TextTop:
        id: _title
        color: 0,0,0,1
        text: 'Title'
        font_size: 24
        height: 66
        pos: 0, 0

<Subsection>:
    size_hint: .5, None
    height: 126
    group: '_subsections'
    background_normal: 'Settings/images/green_button.png'
    background_down: ''
    background_color: .19, .24, .29, 1
    markup: True

    RelativeLayout:
        size: self.parent.size
        pos: self.parent.pos
        RelativeLayout: #IMAGE IMAGE IMAGE IMAGE IMAGE IMAGE
            id: _icon
            size_hint: None, None
            size: 60,70
            pos: (self.parent.width-self.width)/2, self.parent.height-self.height
            #canvas:
            #    Rectangle:
            #        pos: 0,0
            #        size: 80,80
            #        source: 'Settings/images/users/user.png'
        TextTop:
            id: _subsection_title
            color: 0,0,0,1
            text: 'Title'
            font_size: 24
            height: 66
            pos: 0, 0
    #Changetime:
    #    size_hint: None, None
    #    size: self.parent.size
    #    pos: self.parent.pos

<HomeScreen>:
    #name: 'home_screen'
    GridLayout: #ScrollView
        id: _categories_place
        spacing: 16
        padding: 0
        cols: 2
        rows: 3

<RedScreen>:
    canvas:
        Color:
            rgb: 1,0,0
        Rectangle:
            size:self.size
            pos:self.pos