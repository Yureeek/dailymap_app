#: import settings Settings.settings_kv

<RelativeLayoutCustom@RelativeLayout>:
    #Add border to RelativeLayout
    canvas.before:
        Color:
            rgb: .87, .89, .91
        Rectangle:
            size: self.width, self.height
            pos: 0,0
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.width-2.5, self.height-2.5
            pos: 1.25,1.25

<TextTop@Label>:
    font_name: 'Settings/fonts/OpenSans-Semibold.ttf'
    text_size: self.size
    pos: 0, (self.parent.height-self.height)/2
    font_size: 14
    color: .19, .24, .29, 1
    halign: 'center'
    valign: 'middle'
    size_hint_y: None

<TextCustom@Label>:
    #common text
    color: .19, .24, .29, 1
    font_size: 16
    font_name: 'Settings/fonts/OpenSans-Light.ttf'
    text_size: self.size
    halign: 'left'
    valign: 'middle'
    size_hint_y: None
    height: 30

<TitleLabel@Label>:
    #title text
    text_size: self.size
    color: .19, .24, .29, 1
    font_name: 'Settings/fonts/OpenSans-Light.ttf'
    halign: 'left'
    valign: 'middle'
    size_hint_y: None
    height: 60



<ButtonSave@Button>:
    size_hint: None, None
    size: 160, 50
    font_name: 'Settings/fonts/OpenSans-Bold.ttf'
    background_normal: 'Settings/images/123.png'
    background_down: 'Settings/images/green_button.png'
    background_color: .01, .70, .89,1
    color: 1,1,1,1

<ButtonCancel@Button>:
    size_hint: None, None
    size: 180, 50
    font_name: 'Settings/fonts/OpenSans-Bold.ttf'
    background_normal: 'Settings/images/green_button.png'
    background_down: 'Settings/images/red.png'
    #background_color: .01, .70, .89,1
    color: 1,1,1,1

<ButtonDelete@Button>:
    size_hint: None, None
    size: 180, 50
    font_name: 'Settings/fonts/OpenSans-Bold.ttf'
    background_normal: 'Settings/images/red.png'
    background_down: 'Settings/images/123.png'
    background_color: 1, .70, .89,1
    color: 1,1,1,1

<Datebtn@Button>:
    id: _date_btn
    pos: 0,0
    size: self.parent.size
    background_normal: 'Settings/images/free.png'
    background_down: 'Settings/images/free.png'
    RelativeLayout:
        pos: self.parent.pos
        size: self.parent.size
        canvas:
            Color:
                rgb: (.01,.80,.73) if self.parent.state == 'down' else (0,0,0)
            Rectangle:
                pos: self.parent.width-40, 15 #(self.parent.height-self.height)/2
                size: 20,10
                source: 'Settings/images/bottom_arrow.png'


<ChoseDate@RelativeLayout>:     #DATE DATE DATE DATE DATE DATE
    size_hint: None, None
    width: 280#565#322.5
    height: 40
    canvas:
        Color:
            rgb: .98,.99,.99
        Rectangle:
            size: self.size
            pos: 0,0
    TextTop:
        x: 5
        id: _date_text
        text: 'FRIDAY, 10 JUNE 2018'
    Datebtn:
        id: _date_btn

<Rightbtn@Button>:
    size_hint:None,None
    size: 50,50
    background_normal: 'Settings/images/free.png'
    background_down: 'Settings/images/free.png'
    RelativeLayout:
        pos: self.parent.pos
        size: self.parent.size
