<TextInputCustom@TextInput>:
    #font_size: 16
    multiline: False
    size_hint: None, None
    width: 500
    height: 50
    padding: 15
    background_normal: ''
    background_active: 'Settings/images/123.png'
    color: 1,1,1,1
    font_size: '16dp'
    font_name: 'Settings/fonts/OpenSans-Semibold.ttf'
    background_color: 1,1,1,1
    canvas.after:
        Color:
            rgb: .87, .89, .91
        Line:
            points: self.pos[0], self.pos[1], self.pos[0], self.pos[1] + self.size[1], self.pos[0] + self.size[0], self.pos[1] + self.size[1], self.pos[0]+self.size[0], self.pos[1]
            close: True
            width: 1






