<Arrow_top_btn@Button>:
    size_hint: None, None
    size: 85, 40
    background_normal: 'Settings/images/free.png'
    background_down: 'Settings/images/free.png'
    #background_color: (.19, .24, .29, 1) if self.state == 'down' else (.87, .89, .91, 1)
    StackLayout:
        pos: self.parent.pos
        size: self.parent.size
        orientation: 'lr-tb'
        RelativeLayout:
            canvas:
                Color:
                    rgba: (.01,.8,.73,1) if self.parent.parent.state == 'down' else (.19, .24, .29, 1)
                Rectangle:
                    pos: 27.5, 30
                    size: 30,10
                    source:'Settings/images/top_arrow.png'

<Arrow_bottom_btn@Button>:
    size_hint: None, None
    size: 85, 40
    background_normal: 'Settings/images/free.png'
    background_down: 'Settings/images/free.png'
    #background_color: (.19, .24, .29, 1) if self.state == 'down' else (.87, .89, .91, 1)
    StackLayout:
        pos: self.parent.pos
        size: self.parent.size
        orientation: 'lr-tb'
        RelativeLayout:
            canvas:
                Color:
                    rgba: (.01,.8,.73,1) if self.parent.parent.state == 'down' else (.19, .24, .29, 1)
                Rectangle:
                    pos: 27.5, 5
                    size: 30,10
                    source: 'Settings/images/bottom_arrow.png'


<TimeCounter>:
    size_hint: None,None
    size: 170, 80
    BoxLayout:
        pos: 0, self.parent.height-20-25
        Arrow_top_btn:
            id: _up_hour
        Arrow_top_btn:
            id: _up_minute
    RelativeLayout:
        size_hint: None,None
        size: 170, 40
        pos: 0, 20
        TimeLabel:
            id: _hour
            pos: 0,3
            halign: 'right'
            text: '09'
        TimeLabel:
            pos: 70, 8
            width: 30
            text: ':'
        TimeLabel:
            id: _minute
            pos:100,3
            halign: 'left'
            text: '00'
    BoxLayout:
        pos: 0,0
        Arrow_bottom_btn:
            id: _down_hour
        Arrow_bottom_btn:
            id: _down_minute

