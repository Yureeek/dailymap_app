<PasswordSettings@Screen>:
    name: 'password_settings'
    RelativeLayoutCustom:
        pos: 0, self.parent.height-self.height
        size_hint: None, None
        size: 650, 500
        BoxLayout:
            pos: (self.parent.width-self.width)/2,25
            orientation: 'vertical'
            size_hint: None, None
            size: 550, 500
            TitleLabel:
                font_size: 40
                text: 'Change password'
            TitleLabel:
                font_size: 16
                text: 'You can change your password here.'
            TextCustom:
                text: 'Current password'
            TextInputCustom:
                width: 550
                id: _email

            TextCustom:
                text: 'New password'
            TextInputCustom:
                width: 550
                id: _username

            TextCustom:
                text: 'New password'
            TextInputCustom:
                width: 550
                password: True
                id: _password
            TitleLabel:
                id: _error_lbl
                font_size: 16
                text: ''
            BoxLayout:
                size_hint_y: None
                height: 50
                spacing: 5
                Widget:
                ButtonCancel:
                    text: 'CANCEL'
                    on_press: print('Good')
                ButtonSave:
                    text: 'SAVE'
                    on_press: print('Good')
